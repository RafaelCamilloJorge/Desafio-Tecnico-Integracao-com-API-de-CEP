{
  "compilerOptions": {
    "target": "ES6", 
    "module": "commonjs", 
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist", 
    "rootDir": ".", 
    "resolveJsonModule": true, 
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules"]
}
